{
  "name": "template-login-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n backend,frontend -c cyan,magenta \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "pnpm start:backend & pnpm start:frontend",
    "start:backend": "pnpm --filter backend start:prod",
    "start:frontend": "pnpm --filter frontend start",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:up:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:down:clean": "docker compose down -v --rmi local",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "lint:backend": "pnpm --filter backend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:fix": "pnpm lint:fix:backend && pnpm lint:fix:frontend",
    "lint:fix:backend": "pnpm --filter backend lint:fix",
    "lint:fix:frontend": "pnpm --filter frontend lint:fix",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "test:ci": "echo \"[frontend] No test runner configured yet\" && exit 0",
    "ci:local": "pnpm lint && pnpm test:ci && pnpm sonar:local",
    "sonar:local": "sonar-scanner",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "@types/jest": "^30.0.0"
  },
  "lint-staged": {
    "apps/backend/**/*.{ts,js}": [
      "pnpm -F @app/backend run lint:fix",
      "prettier -w"
    ],
    "apps/frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm -F @app/frontend run lint:fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml,css,scss,html}": [
      "prettier -w"
    ]
  }
}
